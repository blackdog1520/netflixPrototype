<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
          android:enterFadeDuration="30"
          android:exitFadeDuration="30">
    <item android:state_pressed="true"
          android:drawable="@drawable/foreground_color"

    /> <!-- pressed -->
    <item android:state_focused="true"
          android:drawable="@drawable/foreground_color" /> <!-- focused -->
    <item android:state_hovered="true"
          android:drawable="@drawable/foreground_color" /> <!-- hovered -->
    <item android:drawable="@drawable/foreground_default" /> <!-- default -->
</selector>